<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"

    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">






    <RelativeLayout

        android:id="@+id/body"

        android:layout_width="match_parent"

        android:layout_height="wrap_content"


        android:paddingBottom="16dp"


        android:layout_alignParentLeft="true"

        android:layout_alignParentStart="true"
        tools:ignore="RtlHardcoded,UselessParent">


        <ImageButton

            android:id="@+id/image"

            android:layout_width="200dp"

            android:layout_height="200dp"

            android:layout_centerHorizontal="true"

            android:layout_marginTop="15dp"

            android:background="#00FFFFFF"

            android:contentDescription="@string/todo"

            android:scaleType="centerCrop"
            android:src="@drawable/chat" />


        <TextView
            android:id="@+id/texterror"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/image"

            android:fontFamily="monospace"
            android:gravity="center"
            android:padding="20dp"
            android:text="@string/antes_de_entrar"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="#FF0000"
            android:textSize="24sp"
            android:textStyle="normal|bold" />

        <TextView
            android:id="@+id/textoexplicar"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/texterror"

            android:fontFamily="monospace"
            android:gravity="center"
            android:padding="20dp"
            android:text="@string/la_palabra_clave_es_nica_por_lo_cual_acuerdese_de_ella_junto_a_su_usuario_debido_a_que_funcionar_como_una_contrase_a"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="#000"
            android:textSize="22sp"
            android:textStyle="normal|bold" />
        <Button
            android:id="@+id/button_entrar_chat"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="24dp"
            android:layout_weight="0"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/selector_btn_white"
            android:stateListAnimator="@null"
            android:text="Entrar"
            android:textColor="@color/btn_send"
            app:theme="@style/AppTheme.ButtonStyle2"
            android:layout_below="@id/textoexplicar"></Button>

    </RelativeLayout>



</RelativeLayout>